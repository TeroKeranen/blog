<!DOCTYPE html>
<html lang="en">

<!-- Include head -->
<%- include('./partials/head.ejs') %>

    <body>
        <!-- Navbar -->
        <%- include('./partials/navRegistered.ejs') %>

        <main class="blogit-osio">

            <section class="blogit-otsikko">
                <h1> Postaukset </h1>
            </section>

            <article class="blogs-grid">


                    <% if(blogs.length > 0) { %>
                        <% blogs.forEach(blog => { %>
                            <article class="single-blog">
                            <div class="luonut">
                                <p>Tekstin on luonut käyttäjä: <%= blog.username %></p>
                            </div>
                            <div class="blog">
                                <h3><%= blog.title %></h3>
                                
                                <p><%= blog.body.substring(0,20) + " ..." %></p>
                                <a href="/home/<%= blog._id %>">Read more</a>
                                <div class="date">
                                    <p><%= blog.date %></p>
                                </div>
                            </div>
                            </article>
                        <% }) %>
                    <% } else { %>
                        <p>Ei ole yhtään blogia</p>
                    <% } %>



            </article>


        </main>


            <!-- Footer -->
            <%- include('./partials/footer.ejs') %>



    </body>

</html>